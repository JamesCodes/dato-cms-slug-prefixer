	"private": false,
	"version": "1.0.0",
	"license": "MIT",
	"author": "JamesCodes <contact@jamescodes.co.uk>",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JamesCodes/dato-cms-slug-prefixer.git"
	},
	"bugs": {
		"url": "https://github.com/JamesCodes/dato-cms-slug-prefixer/issues"
