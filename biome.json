{
	"$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
	"assist": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"correctness": {
				"noUnknownPseudoElement": "off"
			}
		}
	},
	"files": {
		"includes": ["src/**", "*.json", "*.ts"]
	},
	"overrides": [
		{
			"includes": ["src/code-editor-overrides.css"],
			"linter": {
				"rules": {
					"complexity": {
						"noImportantStyles": "off"
					}
				}
			}
		}
	]
}
